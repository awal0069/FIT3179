{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Global Deforestation by Country",
    "width": "container",
    "height": 500,
    "params": [
        {
            "name": "Year_selection",
            "value": 1990,
            "bind": {
                "input": "select",
                "options": [1990, 2000, 2010, 2015],
                "labels": ["1990", "2000", "2010", "2015"],
                "name": "Year: "
            }
        }
    ],
    "projection": {
        "type": "equirectangular"
    },
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
                "format": { "type": "topojson", "feature": "oceans" }
            },
            "mark": {
                "type": "geoshape",
                "fill": "#aadaff",
                "stroke": "white",
                "strokeWidth": 0.5
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
                "format": { "type": "topojson", "feature": "graticules" }
            },
            "mark": {
                "type": "geoshape",
                "stroke": "lightgray",
                "strokeWidth": 0.5,
                "fill": null
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
                "format": { "type": "topojson", "feature": "countries" }
            },
            "transform": [
                {
                    "lookup": "properties.NAME",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/awal0069/FIT3179/refs/heads/main/Project%202/data/annual-deforestation.csv"
                        },
                        "key": "Country",
                        "fields": ["Deforestation", "Year"]
                    },
                    "as": "deforestation"
                },
                { 
                    "filter": {
                        "field": "deforestation.Year",
                        "equal": {"expr": "Year_selection"}
                    }
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "#fff",
                "strokeWidth": 0.5
            },
            "encoding": {
                "color": {
                    "field": "deforestation.Deforestation",
                    "type": "quantitative",
                    "scale": {
                        "scheme": "reds"
                    },
                    "legend": { 
                        "title": "Deforestation (km²)",
                        "format": ".2f"
                    }
                },
                "tooltip": [
                    { "field": "properties.NAME", "type": "nominal", "title": "Country" },
                    { 
                        "field": "deforestation.Deforestation", 
                        "type": "quantitative", 
                        "title": "Deforestation (km²)",
                        "format": ".2f"
                    },
                    { "field": "deforestation.Year", "type": "quantitative", "title": "Year" }
                ]
            }
        }
    ],
    "config": {}
}