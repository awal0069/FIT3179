{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Forest area as share of land area over time (interactive time brush, line charts)",
  "vconcat": [
    {
      "width": "container",
      "height": 400,
      "title": "Share of land covered by forest by country",
      "data": {
        "url": "https://raw.githubusercontent.com/awal0069/FIT3179/refs/heads/main/Project%202/data/forest-area-as-share-of-land-area.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {"filter": "datum.Entity && datum.Year && datum['Share of land covered by forest']"},
        {
          "filter": "datum.Entity !== 'Africa (FAO)' && datum.Entity !== 'Asia (FAO)' && datum.Entity !== 'Caribbean (FAO)' && datum.Entity !== 'Central America (FAO)' && datum.Entity !== 'Europe (FAO)'"
        },
        {"filter": {"param": "time_brush"}}
      ],
      "layer": [
        {
          "mark": {"type": "line", "strokeWidth": 2, "opacity": 0.8},
          "encoding": {
            "x": {
              "field": "Year",
              "type": "temporal",
              "axis": {"title": "Year", "format": "%Y"}
            },
            "y": {
              "field": "Share of land covered by forest",
              "type": "quantitative",
              "title": "Share of Land Covered by Forest (%)",
              "scale": {"zero": false}
            },
            "color": {
              "field": "Entity",
              "type": "nominal",
              "title": "Country",
              "legend": {"title": "Countries", "orient": "right", "columns": 2, "symbolLimit": 0},
              "scale": {"scheme": "category20"}
            },
            "tooltip": [
              {"field": "Entity", "type": "nominal", "title": "Country"},
              {"field": "Year", "type": "temporal", "title": "Year"},
              {"field": "Share of land covered by forest", "type": "quantitative", "title": "Forest Cover %", "format": ".2f"}
            ]
          }
        },
        {
          "select": {
            "hover": {
              "type": "single",
              "on": "mouseover",
              "nearest": true,
              "empty": "none",
              "clear": "mouseout"
            }
          },
          "mark": {"type": "point", "size": 60, "opacity": 0},
          "encoding": {
            "x": {"field": "Year", "type": "temporal"},
            "y": {"field": "Share of land covered by forest", "type": "quantitative"},
            "color": {"field": "Entity", "type": "nominal", "scale": {"scheme": "category20"}},
            "opacity": {"condition": {"selection": "hover", "value": 1}, "value": 0},
            "tooltip": [
              {"field": "Entity", "type": "nominal", "title": "Country"},
              {"field": "Year", "type": "temporal", "title": "Year"},
              {"field": "Share of land covered by forest", "type": "quantitative", "title": "Forest Cover %", "format": ".2f"}
            ]
          }
        }
      ]
    },
    {
      "width": "container",
      "height": 60,
      "mark": "line",
      "title": "Use this line chart to filter the data by time",
      "data": {
        "url": "forest-area-as-share-of-land-area.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {"filter": "datum.Entity && datum.Year && datum['Share of land covered by forest']"},
        {
          "filter": "datum.Entity !== 'Africa (FAO)' && datum.Entity !== 'Asia (FAO)' && datum.Entity !== 'Caribbean (FAO)' && datum.Entity !== 'Central America (FAO)' && datum.Entity !== 'Europe (FAO)'"
        }
      ],
      "params": [
        {
          "name": "time_brush",
          "select": {"type": "interval", "encodings": ["x"]}
        }
      ],
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal",
          "timeUnit": "year",
          "axis": {"title": "", "format": "%Y"}
        },
        "y": {
          "aggregate": "count",
          "axis": {"tickCount": 3, "grid": false},
          "title": "Count"
        }
      }
    },
    {
      "width": "container",
      "height": 120,
      "data": {
        "url": "forest-area-as-share-of-land-area.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {"filter": "datum.Entity && datum.Year && datum['Share of land covered by forest']"},
        {
          "filter": "datum.Entity !== 'Africa (FAO)' && datum.Entity !== 'Asia (FAO)' && datum.Entity !== 'Caribbean (FAO)' && datum.Entity !== 'Central America (FAO)' && datum.Entity !== 'Europe (FAO)'"
        }
      ],
      "mark": "line",
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal",
          "timeUnit": "yearmonth",
          "scale": {"domain": {"param": "time_brush"}},
          "axis": {"title": "", "tickCount": 5, "grid": false}
        },
        "y": {
          "aggregate": "mean",
          "field": "Share of land covered by forest",
          "type": "quantitative",
          "title": "Mean Forest Cover % (selected period)"
        },
        "color": {"value": "#2c7fb8"}
      }
    }
  ],
  "config": {
    "view": {"stroke": "transparent"},
    "axis": {"grid": true},
    "legend": {"labelLimit": 0, "symbolSize": 100},
    "title": {"font": "sans-serif", "fontSize": 14}
  }
}
