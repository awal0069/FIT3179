{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Forest Area as Share of Land Area by Country (1990-2020)",
  "width": "container",
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/awal0069/FIT3179/refs/heads/main/data/forest_area_from_1990.csv"
  },
  "transform": [
    {
      "filter": "datum.Entity !== 'World'"
    }
  ],
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "title": "Year",
      "axis": {
        "format": "%Y",
        "labelAngle": 0
      }
    },
    "y": {
      "field": "Share of land covered by forest",
      "type": "quantitative",
      "title": "Forest Area (% of Land Area)"
    },
    "color": {
      "field": "Entity",
      "type": "nominal",
      "title": "Country",
      "legend": {
        "title": "Countries",
        "orient": "right",
        "columns": 1
      }
    },
    "tooltip": [
      {"field": "Entity", "type": "nominal", "title": "Country"},
      {"field": "Year", "type": "temporal", "title": "Year"},
      {"field": "Share of land covered by forest", "type": "quantitative", "title": "Forest Area (%)", "format": ".2f"}
    ]
  },
  "layer": [
    {
      "mark": {
        "type": "line",
        "strokeWidth": 2,
        "opacity": 0.8
      }
    },
    {
      "mark": {
        "type": "point",
        "size": 30,
        "opacity": 0.6
      },
      "encoding": {
        "tooltip": [
          {"field": "Entity", "type": "nominal", "title": "Country"},
          {"field": "Year", "type": "temporal", "title": "Year"},
          {"field": "Share of land covered by forest", "type": "quantitative", "title": "Forest Area (%)", "format": ".2f"}
        ]
      }
    }
  ],
  "config": {
    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 14
    },
    "title": {
      "fontSize": 16,
      "fontWeight": "bold"
    },
    "legend": {
      "labelFontSize": 11,
      "titleFontSize": 12
    }
  }
}